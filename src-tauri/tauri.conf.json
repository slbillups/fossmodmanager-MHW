{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fossmodmanager",
  "version": "0.1.0",
  "identifier": "com.fossmodmanager.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "fossmodmanager",
        "width": 900,
        "height": 600,
        "decorations": false,
        "label": "main"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; connect-src * ipc: http://ipc.localhost; img-src 'self' https://staticdelivery.nexusmods.com https://via.placeholder.com data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval';",
      "headers": {
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Embedder-Policy": "unsafe-none",
        "Timing-Allow-Origin": [
            "https://developer.mozilla.com",
            "https://*.tauri.app"
        ],
        "X-Content-Type-Options": null,
        "Access-Control-Expose-Headers": "fossmodmanager-version",
        "Tauri-Custom-Header": {
          "Application-Version": "0.1.0",
          "Application-Name": "fossmodmanager",
          "Application-Sub": "fossmodmanager-vortexAPI-test",
          "Application-Author": "FossModManager",
          "Application-Website": "https://github.com/slbillups/fossmodmanager",
          "Application-Description": "A mod manager for FossMods"
        }
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Core application capabilities",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            "core:app:default",
            "core:window:allow-close",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:webview:allow-internal-toggle-devtools",
            "dialog:allow-open",
            "dialog:allow-message",
            "fs:allow-exists",
            "fs:allow-mkdir",
            "fs:allow-read-dir",
            "opener:allow-open-path",
            "http:default",
            {
              "identifier": "http:allow-fetch",
              "allow": ["https://api.nexusmods.com/*", "https://api.github.com/*"]
            }
          ]
        },
        {
          "identifier": "fs-read-config",
          "description": "Allows reading the application config file.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-read-file",
              "scope": { "allow": ["$APPCONFIG/userconfig.json"] }
            }
          ]
        },
        {
          "identifier": "fs-write-config",
          "description": "Allows writing the application config file.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-write-file",
              "scope": { "allow": ["$APPCONFIG/userconfig.json"] }
            }
          ]
        },
        {
          "identifier": "fs-delete-config",
          "description": "Allows deleting the application config file.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-remove",
              "scope": { "allow": ["$APPCONFIG/userconfig.json"] }
            }
          ]
        },
        {
          "identifier": "fs-read-modlist",
          "description": "Allows reading the application mod list file.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-read-file",
              "scope": { "allow": ["$APPCONFIG/modlist.json"] }
            }
          ]
        },
        {
          "identifier": "fs-write-modlist",
          "description": "Allows writing the application mod list file.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-write-file",
              "scope": { "allow": ["$APPCONFIG/modlist.json"] }
            },
            {
              "identifier": "fs:allow-mkdir",
              "scope": { "allow": ["$APPCONFIG"] }
            }
          ]
        },
        {
          "identifier": "fs-read-mods",
          "description": "Allows reading game directory structure to check mod status.",
          "windows": ["main"],
          "permissions": [
             "core:path:default",
            {
              "identifier": "fs:allow-exists",
              "scope": { "allow": ["$HOME/**"] }
            }
          ]
        },
        {
          "identifier": "fs-install-mod",
          "description": "Allows reading mod zip files and extracting/writing them to the game directory.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-read-file",
              "scope": { "allow": ["$DOWNLOAD/**.zip", "$DESKTOP/**.zip", "$DOCUMENT/**.zip", "$HOME/**.zip"] }
            },
             {
              "identifier": "fs:allow-read-dir",
              "scope": { "allow": ["$HOME/**"] }
            },
            {
              "identifier": "fs:allow-write-file",
              "scope": { "allow": ["$HOME/**"] }
            },
            {
              "identifier": "fs:allow-mkdir",
              "scope": { "allow": ["$HOME/**"] }
            },
            {
              "identifier": "fs:allow-remove",
              "scope": { "allow": ["$HOME/**"] }
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {

  }
}
