{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fossmodmanager",
  "version": "0.1.0",
  "identifier": "com.fossmodmanager.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "fossmodmanager",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "visible": false,
        "label": "main"
      },
      {
        "title": "FossModManager Setup",
        "width": 600,
        "height": 400,
        "decorations": true,
        "visible": true,
        "label": "setup",
        "url": "/setup.html",
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' ipc://localhost",
        "connect-src": "'self' ipc://localhost https://api.nexusmods.com https://api.github.com",
        "img-src": "'self' 'unsafe-inline' asset: asset://* asset://localhost/* http://asset.localhost https://asset.localhost blob: data: *",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      },
      "headers": {
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Embedder-Policy": "unsafe-none",
        "Timing-Allow-Origin": [
            "https://developer.mozilla.com",
            "https://*.tauri.app"
        ],
        "X-Content-Type-Options": null,
        "Access-Control-Expose-Headers": "fossmodmanager-version",
        "Tauri-Custom-Header": {
          "Application-Version": "0.1.0",
          "Application-Name": "fossmodmanager",
          "Application-Sub": "fossmodmanager-vortexAPI-test",
          "Application-Author": "FossModManager",
          "Application-Website": "https://github.com/slbillups/fossmodmanager",
          "Application-Description": "A mod manager for all"
        }
      },
      "capabilities": [
        {
          "identifier": "fossmodmanager-core-capability",
          "description": "Core application capabilities without file system access",
          "windows": ["main", "setup"],
          "permissions": [
            "core:path:default",
            "core:app:default",
            "core:window:allow-close",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "core:webview:allow-internal-toggle-devtools",
            "dialog:allow-message",
            "core:event:allow-emit",
            "process:allow-restart",
            "core:event:allow-listen",
            "core:event:default"
          ]
        },
        {
          "identifier": "fossmodmanager-http-capability",
          "description": "Network capabilities for API access",
          "windows": ["main"],
          "permissions": [
            {
              "identifier": "http:default",
              "scope": {
                "allow": ["https://api.nexusmods.com/*", "https://api.github.com/*"]
              }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-fs-read-config",
          "description": "Allows reading the application config file.",
          "windows": ["main", "setup"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-read-file",
              "scope": { "allow": ["$APPCONFIG/fossmodmanager/userconfig.json"] }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-fs-write-config",
          "description": "Allows writing the application config file.",
          "windows": ["main", "setup"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-write-file",
              "scope": { "allow": ["$APPCONFIG/fossmodmanager/userconfig.json"] }
            },
            {
              "identifier": "fs:allow-mkdir",
              "scope": { "allow": ["$APPCONFIG/fossmodmanager"] }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-fs-delete-config",
          "description": "Allows deleting the application config file and related data.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-remove",
              "scope": { 
                "allow": [
                  "$APPCONFIG/fossmodmanager/userconfig.json",
                  "$APPDATA/fossmodmanager/**",
                  "$APPCACHE/fossmodmanager/**"
                ] 
              }
            },
            {
              "identifier": "fs:allow-remove",
              "scope": {
                "allow": [
                  "$APPDATA/fossmodmanager",
                  "$APPCACHE/fossmodmanager"
                ]
              }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-fs-read-modlist",
          "description": "Allows reading the application mod list file.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-read-file",
              "scope": { "allow": ["$APPDATA/fossmodmanager/modlist.json"] }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-fs-write-modlist",
          "description": "Allows writing the application mod list file.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-write-file",
              "scope": { "allow": ["$APPDATA/fossmodmanager/modlist.json"] }
            },
            {
              "identifier": "fs:allow-mkdir",
              "scope": { "allow": ["$APPDATA/fossmodmanager"] }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-fs-mod-cache",
          "description": "Allows managing cached mod data and extracted game assets.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-read-file",
              "scope": { "allow": ["$APPCACHE/fossmodmanager/**"] }
            },
            {
              "identifier": "fs:allow-write-file",
              "scope": { "allow": ["$APPCACHE/fossmodmanager/**"] }
            },
            {
              "identifier": "fs:allow-mkdir",
              "scope": { "allow": ["$APPCACHE/fossmodmanager/**"] }
            },
            {
              "identifier": "fs:allow-remove",
              "scope": { "allow": ["$APPCACHE/fossmodmanager/**"] }
            },
            {
              "identifier": "fs:allow-read-dir",
              "scope": { "allow": ["$APPCACHE/fossmodmanager/**"] }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-fs-read-downloads",
          "description": "Allows reading mod zip files for installation.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "dialog:allow-open",
              "scope": {
                "allow": ["**/*.zip"]
              }
            },
            {
              "identifier": "fs:allow-read-file",
              "scope": { "allow": ["$DOWNLOAD/**.zip", "$DESKTOP/**.zip", "$DOCUMENT/**.zip"] }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-game-binary-setup",
          "description": "Allows selecting game binary during setup.",
          "windows": ["setup"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "dialog:allow-open",
              "scope": {
                "allow": ["**/*.exe", "**/RE*", "**/re*"]
              }
            }
          ]
        },
        {
          "identifier": "fossmodmanager-fs-game-integration",
          "description": "Allows verified access to user-selected game directories.",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            {
              "identifier": "fs:allow-exists",
              "scope": { "allow": ["$RESOURCE/**"] }
            },
            {
              "identifier": "fs:allow-read-file",
              "scope": { "allow": ["$RESOURCE/**"] }
            },
            {
              "identifier": "fs:allow-read-dir",
              "scope": { "allow": ["$RESOURCE/**"] }
            },
            {
              "identifier": "opener:allow-open-path",
              "scope": { "allow": ["$RESOURCE/**"] }
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "protocols": {
      "asset": {
        "schemas": ["asset"],
        "mimeTypes": {
          "png": "image/png",
          "jpg": "image/jpeg",
          "jpeg": "image/jpeg",
          "gif": "image/gif",
          "webp": "image/webp"
        }
      }
    }
  }
}
