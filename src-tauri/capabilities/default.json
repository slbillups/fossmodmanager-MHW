{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop-capability",
  "description": "This program allows access to the steam filesystem as well as the $HOME/.config/fossmodmanager directory and $APPDATA/fossmodmanager directory and $HOME/.config/fossmodmanager directory and $APPDATA/fossmodmanager directory",
  "windows": [
    "main",
    "setup"
  ],
  "platforms": [
    "linux"
  ],
  "permissions": [
    "core:path:default",
    "core:app:default",
    "core:window:default",
    "core:webview:allow-internal-toggle-devtools",
    "dialog:allow-open",
    "dialog:allow-message",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "opener:allow-open-path",
    "http:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$RESOURCE/*"
        },
        {
          "path": "**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "**/*.ini"
        },
        {
          "path": "**/fossmodmanager/**"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "extractgameassets.sh",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "shell:default"
  ]
}